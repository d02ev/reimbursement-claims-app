{
  "name": "reimbursement-claims-app",
  "version": "1.0.0",
  "description": "A simple and minimal reimbursement claiming app",
  "main": "index.js",
  "scripts": {
    "build": "npx babel 'src/' --out-dir 'dist/'",
    "start": "npm run build && node ./dist/index.js",
    "format": "npx prettier --write src/**/*.js",
    "lint": "npx eslint src/**/*.js --fix",
    "start:dev": "nodemon --exec babel-node ./src/index.js",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "studio:dev": "dotenv -e .env.development -- npx prisma studio",
    "prepare": "husky"
  },
  "lint-staged": {
    "./src/**/*.js": "npx prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/d02ev/reimbursement-claims-app.git"
  },
  "keywords": [
    "js",
    "javascript",
    "node",
    "express",
    "es6",
    "es6+",
    "ecmascript",
    "psql",
    "docker",
    "postgres",
    "react",
    "jsx",
    "pern"
  ],
  "author": "Vikramaditya Pratap Singh (d02ev)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/d02ev/reimbursement-claims-app/issues"
  },
  "homepage": "https://github.com/d02ev/reimbursement-claims-app#readme",
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@supabase/supabase-js": "^2.43.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "express": "^4.19.2",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.5",
    "@eslint/js": "^9.2.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "prisma": "^5.13.0"
  }
}
